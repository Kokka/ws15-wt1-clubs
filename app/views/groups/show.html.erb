<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>ID:</strong>
  <%= @group.id %>
</p>

<h2>Members</h2>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Member ID</th>
      <th>Joined</th>
      <th>Kick from Group</th>
    </tr>
  </thead>

  <tbody>
    <% @group.memberships.each do |membership| %>
      <tr>
        <td><%= (Member.find_by id: membership.member_id).firstName %></td>
        <td><%= (Member.find_by id: membership.member_id).lastName %></td>
        <td><%= (Member.find_by id: membership.member_id).id %></td>
        <td><%= membership.joined %></td>
        <td><%= link_to 'Destroy', membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Member', new_membership_path %>|
